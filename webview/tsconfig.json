{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "target": "ES2022",
    "module": "ES2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "$lib/*": ["src/lib/*"],
      "@bininspect": ["../ts/src/bininspect"]
    },
    "types": ["svelte"]
  },
  "include": ["src/**/*.ts", "src/**/*.svelte", "../ts/src/bininspect.ts"],
  "exclude": ["node_modules"]
}
