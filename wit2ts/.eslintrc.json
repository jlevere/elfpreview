{
	"root": true,
	"parserOptions": {
		"ecmaVersion": 2020,
		"project": [
			"./src/tsconfig.json"
		]
	},
	"rules": {
		"no-console": "error",
		"@typescript-eslint/no-floating-promises": "error",
		"semi": "error",
		"no-extra-semi": "warn",
		"curly": "warn",
		"quotes": [
			"error",
			"single",
			{
				"allowTemplateLiterals": true
			}
		],
		"eqeqeq": "error",
		"indent": [
			"warn",
			"tab",
			{
				"SwitchCase": 1
			}
		]
	},
	"env": {
		"commonjs": true,
		"es6": true
	}
}